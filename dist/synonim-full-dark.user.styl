/* ==UserStyle==

@name           Synonim - Full Dark
@namespace      github.com/Prologh/synonim-full-dark
@description    CSS theme for synonim.net. Get flat, dark grey feeling for night surfing.
@author         prologh (https://github.com/Prologh)
@homepageURL    https://github.com/Prologh/synonim-full-dark
@supportURL     https://github.com/Prologh/synonim-full-dark/issues
@updateURL      https://github.com/Prologh/synonim-full-dark/raw/master/dist/synonim-full-dark.user.styl
@preprocessor   stylus
@version        1.0.3
@license        MIT

==/UserStyle== */

/* ### Variables ### */
@document regexp("https?://(www.)?synonim.net.*") {
  /* ### Variables ### */
  /* ### Containers ### */
  #mdef,
  #bot,
  #page section,
  main,
  main section {
    background: #1C1C1C;
  }
  #bot {
    padding-top: 20px;
  }
  #page {
    background: unset;
    padding-top: 20px;
  }
  #page section {
    padding: 20px;
    padding-top: 5px;
  }
  main .page {
    width: 100%;
  }
  /* ### Variables ### */
  /* ### Controls ### */
  textarea, textarea {
    border: 1px solid #666;
    min-height: 80px !important;
    height: auto;
    resize: vertical;
  }
  input[type=text],
  input[type=email],
  input[type=number],
  input[type=password],
  input[type=tel],
  textarea {
    color: rgb(169.5, 169.5, 169.5);
    background: rgb(51.75, 51.75, 51.75);
  }
  #fx input[type=text] {
    color: rgb(189.9, 189.9, 189.9);
    background: rgb(64.5, 64.5, 64.5);
    border-color: #999999;
  }
  /* ### Variables ### */
  /* ### Variables ### */
  a,
  a[href],
  #bot a {
    color: rgb(50.4881516588, 117.4834123223, 211.5118483412);
    border: none;
  }
  a:hover, a:active, a:focus,
  a[href]:hover,
  a[href]:active,
  a[href]:focus,
  #bot a:hover,
  #bot a:active,
  #bot a:focus {
    color: rgb(113.5734597156, 159.9028436019, 224.9265402844);
    border: none;
  }
  #top a {
    color: rgb(50.4881516588, 117.4834123223, 211.5118483412);
  }
  #top a:hover, #top a:active, #top a:focus {
    color: rgb(113.5734597156, 159.9028436019, 224.9265402844);
  }
  #top a + a {
    color: #22aa22;
  }
  #top a + a:hover, #top a + a:active, #top a + a:focus {
    color: rgb(40.8, 204, 40.8);
  }
  #top a + a + a {
    color: #ff1111;
  }
  #top a + a + a:hover, #top a + a + a:active, #top a + a + a:focus {
    color: rgb(255, 57.8, 57.8);
  }
  .start span a + a + a {
    color: #909090;
  }
  .start span a + a + a:hover, .start span a + a + a:active, .start span a + a + a:focus {
    color: rgb(200.1, 200.1, 200.1);
  }
  /* ### Variables ### */
  /* ### Navbar ### */
  /* Main navbar*/
  #fx {
    background-color: #272727;
  }
  /* Upper login bar, above navbar */
  #top {
    background: rgb(51.75, 51.75, 51.75);
  }
  /* ### Tables ### */
  table tr td {
    width: 100%;
  }
  /* ### Variables ### */
  /* ### Typography ### */
  /* Headers */
  h1 {
    color: #f6f6f6;
  }
  h2 {
    color: rgb(233.25, 233.25, 233.25);
  }
  h3 {
    color: rgb(220.5, 220.5, 220.5);
  }
  h4 {
    color: rgb(207.75, 207.75, 207.75);
  }
  h5 {
    color: #c3c3c3;
  }
  h6 {
    color: rgb(182.25, 182.25, 182.25);
  }
  /* Reset */
  #mall p,
  #mgru p,
  #minf p,
  p,
  #main span h3 {
    color: #909090;
  }
  html {
    background: #1C1C1C;
  }
  body {
    background: #131313;
    color: #909090;
  }
}