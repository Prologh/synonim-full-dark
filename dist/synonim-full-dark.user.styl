/* ==UserStyle==

@name           Synonim - Full Dark
@namespace      github.com/Prologh/synonim-full-dark
@description    CSS theme for synonim.net. Get flat, dark grey feeling for night surfing.
@author         prologh (https://github.com/Prologh)
@homepageURL    https://github.com/Prologh/synonim-full-dark
@supportURL     https://github.com/Prologh/synonim-full-dark/issues
@updateURL      https://github.com/Prologh/synonim-full-dark/raw/master/dist/synonim-full-dark.user.styl
@preprocessor   stylus
@version        1.0.1
@license        MIT

==/UserStyle== */

/* ### Variables ### */
@-moz-document regexp("https?:\/\/(www\.)?synonim\.net.*") {
  /* ### Containers ### */
  #mdef,
  #bot,
  #page section,
  main section {
    background: #1C1C1C;
  }
  #bot {
    padding-top: 20px;
  }
  #page {
    background: unset;
    padding-top: 20px;
  }
  #page section {
    padding: 20px;
    padding-top: 5px;
  }
  /* ### Controls ### */
  textarea, textarea {
    border: 1px solid #666;
    min-height: 80px !important;
    height: auto;
    resize: vertical;
  }
  input[type=text],
  input[type=email],
  input[type=number],
  input[type=password],
  input[type=tel],
  textarea {
    color: #aaaaaa;
    background: #343434;
  }
  #fx input[type=text] {
    color: #bebebe;
    background: #414141;
    border-color: #999999;
  }
  /* ### Variables ### */
  a,
  a[href],
  #bot a {
    color: #3275d4;
    border: none;
  }
  a:hover, a:active, a:focus,
  a[href]:hover,
  a[href]:active,
  a[href]:focus,
  #bot a:hover,
  #bot a:active,
  #bot a:focus {
    color: #72a0e1;
    border: none;
  }
  #top a {
    color: #3275d4;
  }
  #top a:hover, #top a:active, #top a:focus {
    color: #72a0e1;
  }
  #top a + a {
    color: #22aa22;
  }
  #top a + a:hover, #top a + a:active, #top a + a:focus {
    color: #29cc29;
  }
  #top a + a + a {
    color: #ff1111;
  }
  #top a + a + a:hover, #top a + a + a:active, #top a + a + a:focus {
    color: #ff3a3a;
  }
  .start span a + a + a {
    color: #909090;
  }
  .start span a + a + a:hover, .start span a + a + a:active, .start span a + a + a:focus {
    color: #c8c8c8;
  }
  /* ### Navbar ### */
  /* Main navbar*/
  #fx {
    background-color: #272727;
  }
  /* Upper login bar, above navbar */
  #top {
    background: #343434;
  }
  /* ### Tables ### */
  table tr td {
    width: 100%;
  }
  /* ### Typography ### */
  /* Headers */
  h1 {
    color: #f6f6f6;
  }
  h2 {
    color: #e9e9e9;
  }
  h3 {
    color: #dddddd;
  }
  h4 {
    color: #d0d0d0;
  }
  h5 {
    color: #c3c3c3;
  }
  h6 {
    color: #b6b6b6;
  }
  /* Reset */
  #mall p,
  #mgru p,
  #minf p,
  p,
  #main span h3 {
    color: #909090;
  }
  html {
    background: #1C1C1C;
  }
  body {
    background: #131313;
    color: #909090;
  }
}
